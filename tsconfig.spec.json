{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "declaration": true,
      "sourceMap": false,
      "outDir": "./dist",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "jest"]
    },
    "include": ["src/**/*", "tests/*.test.ts"],
    "exclude": ["node_modules", ".vscode", "dist"]
  }
  